
@{
    ViewData["Title"] = "IzinListele";
    Layout = "~/Areas/Kullanici/Views/Shared/_PersonelLayout.cshtml";
    int counter = 0;
    int onay = 0;
    int red = 0;
    int bekleyen = 0;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Components / Accordion - NiceAdmin Bootstrap Template</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/NiceAdmin/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/NiceAdmin/assets/css/style.css" rel="stylesheet">

    <!-- =======================================================
    * Template Name: NiceAdmin - v2.4.1
    * Template URL: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

<body>

    <div class="pagetitle">
        <h1 style="color: azure;">Izin İşlemleri</h1>
        <nav>

            <ol class="breadcrumb">
                <li style="color: azure;" class="breadcrumb-item"><a href="/Kullanici/Personel/Anasayfa">Ana Sayfa</a></li>
                <li style="color: azure;" class="breadcrumb-item" >Izinler</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
        <div class="row">


            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body pt-3">
                        <!-- Bordered Tabs -->
                        <ul class="nav nav-tabs nav-tabs-bordered">

                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">İzin Taleplerim</button>
                            </li>

                            <li class="nav-item">
                                <button class="nav-link " data-bs-toggle="tab" data-bs-target="#profile-edit">Onaylananlar</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link " data-bs-toggle="tab" data-bs-target="#profile-edit1">Reddedilenler</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link " data-bs-toggle="tab" data-bs-target="#profile-edit2">Bekleyenler</button>
                            </li>

                            <li class="nav-item">
                                <a href="/Islemler/Izin/IzinEkle/" class="btn btn-outline-primary" >Talep Oluştur</a>
                            </li>



                        </ul>
                        <div class="tab-content pt-2">

                            <div class="tab-pane fade show active profile-overview" id="profile-overview">


                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">No</th>
                                            <th scope="col">İzin Türü</th>
                                            <th scope="col">Başlangıç Tarihi</th>
                                            <th scope="col">Bitiş Tarihi</th>
                                            <th scope="col">Kalan İzin Günü</th>
                                            <th scope="col">Talep Edilme Tarihi</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (@ViewBag.izinList.Count == 0)
                                        {
                                            <div class="bg-primary text-white text-center lead" style="margin-top:10px">
                                                İzin Talep Listesi Boş
                                            </div>

                                        }



                                        @foreach (var item in ViewBag.izinList)
                                        {
                                            counter++;
                                            <tr>

                                                <td>@counter</td>
                                                <td>@item.permitType.ToString()</td>
                                                <td>@item.StartDate.ToShortDateString()</td>
                                                <td>@item.EndDate.ToShortDateString()</td>
                                                <td>@item.PermitDay</td>
                                                <td>@item.RequestDate.ToShortDateString()</td>
                                                                             
                                            </tr>
                                        }


                                    </tbody>
                                </table>


                            </div>

                            <div class="tab-pane fade profile-edit pt-3" id="profile-edit">


                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">No</th>
                                            <th scope="col">İzin Türü</th>
                                            <th scope="col">Başlangıç Tarihi</th>
                                            <th scope="col">Bitiş Tarihi</th>
                                            <th scope="col">Kalan İzin Günü</th>
                                            <th scope="col">Talep Edilme Tarihi</th>   
                                            <th scope="col">Sonuclanma Tarihi</th>
                                            <th scope="col">Durumu</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (@ViewBag.Onay.Count == 0)
                                        {
                                            <div class="bg-success text-white text-center lead" style="margin-top:10px">
                                                Henüz onaylanan talebiniz yok
                                            </div>

                                        }



                                        @foreach (var item in ViewBag.Onay)
                                        {
                                            onay++;
                                            <tr>
                                                <td>@onay</td>
                                                <td>@item.permitType.ToString()</td>
                                                <td>@item.StartDate.ToShortDateString()</td>
                                                <td>@item.EndDate.ToShortDateString()</td>
                                                <td>@item.PermitDay</td>
                                                <td>@item.RequestDate.ToShortDateString()</td>
                                                <td>@item.ReponseDate.ToShortDateString()</td>
                                                <td><span class="badge bg-success">@item.Statu.ToString()</span></td>
                                             

                                            </tr>
                                        }


                                    </tbody>
                                </table>

                            </div>


                            <div class="tab-pane fade profile-edit pt-3" id="profile-edit1">


                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">No</th>
                                            <th scope="col">İzin Türü</th>
                                            <th scope="col">Başlangıç Tarihi</th>
                                            <th scope="col">Bitiş Tarihi</th>
                                            <th scope="col">Kalan İzin Günü</th>
                                            <th scope="col">Talep Edilme Tarihi</th>
                                            <th scope="col">Sonuclanma Tarihi</th>
                                            <th scope="col">Durumu</th>

                                        </tr>
                                    </thead>
                                    <tbody>

                                        @if (@ViewBag.Reddedilen.Count == 0)
                                        {
                                            <div class="bg-danger text-white text-center lead" style="margin-top:10px">
                                                Reddedilen talebiniz yok
                                            </div>

                                        }


                                        @foreach (var item in ViewBag.Reddedilen)
                                        {
                                            red++;
                                            <tr>
                                                <td>@red</td>
                                                <td>@item.permitType.ToString()</td>
                                                <td>@item.StartDate.ToShortDateString()</td>
                                                <td>@item.EndDate.ToShortDateString()</td>
                                                <td>@item.PermitDay</td>
                                                <td>@item.RequestDate.ToShortDateString()</td>
                                                <td>@item.ReponseDate.ToShortDateString()</td>
                                                <td><span class="badge bg-danger">@item.Statu.ToString()</span></td>



                                            </tr>
                                        }


                                    </tbody>
                                </table>

                            </div>

                            <div class="tab-pane fade profile-edit pt-3" id="profile-edit2">


                                <table class="table table-striped">
                                   
                                        <tr>
                                            <th scope="col">No</th>
                                            <th scope="col">İzin Türü</th>
                                            <th scope="col">Başlangıç Tarihi</th>
                                            <th scope="col">Bitiş Tarihi</th>
                                            <th scope="col">Kalan İzin Günü</th>
                                            <th scope="col">Talep Edilme Tarihi</th>
                                            <th scope="col">Durumu</th>



                                        </tr>
                                  
                                   

                                        @if (@ViewBag.Bekleyen.Count == 0)
                                        {
                                            <div class="bg-yellow text-white text-center lead" style="margin-top:10px">
                                                Bekleyen talebiniz yok
                                           </div>

                                        }


                                        @foreach (var item in ViewBag.Bekleyen)
                                        {
                                            bekleyen++;
                                            <tr>
                                                <td>@bekleyen</td>
                                                <td>@item.permitType.ToString()</td>
                                                <td>@item.StartDate.ToShortDateString()</td>
                                                <td>@item.EndDate.ToShortDateString()</td>
                                                <td>@item.PermitDay</td>
                                                <td>@item.RequestDate.ToShortDateString()</td>                                              
                                                <td><span class="badge bg-warning">@item.Statu.ToString()</span></td>


                                            </tr>
                                        }


                                </table>

                            </div>

                        </div><!-- End Bordered Tabs -->

                    </div>
                </div>

            </div>
        </div>
    </section>




    <!-- Vendor JS Files -->
    <script src="~/NiceAdmin/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/chart.js/chart.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/quill/quill.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/NiceAdmin/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/php-email-form/validate.js"></script>


    <!-- Vendor JS Files -->
    <script src="~/NiceAdmin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>







    <!-- Template Main JS File -->
    <script src="~/NiceAdmin/assets/js/main.js"></script>

</body>

</html>

