@using HumanResourse.UI.Areas.Islemler.Models;
@using HumanResourse.Entitiy.Enums;
@model ExpensesCreateModel
@{
    ViewData["Title"] = "HarcamaSayfasi";
    Layout = "~/Areas/Kullanici/Views/Shared/_PersonelLayout.cshtml";
}

@{
    if (ViewBag.mesaj != null)
    {
        <div class="bg-primary text-white text-center lead">
            @ViewBag.Mesaj
        </div>
    }
}

<body>

    <div class="pagetitle">
        <h1 style="color: azure;">Harcama İşlemleri</h1>
        <nav>
            <ol class="breadcrumb">
                <li style="color: azure;" class="breadcrumb-item"><a href="/Kullanici/Personel/Anasayfa/">Ana sayfa /<a></li>
                <li style="color: azure;" class="breadcrumb-item"><a href="/Islemler/Expenses/Index"> Harcamalar /<a></li>
                <li style="color: azure;" class="breadcrumb-item active"> Harcama Ekle</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->


    <div class="card col-md-10" style="margin-left:8%;">
        <div class="card-body">
            <h5 class="card-title">Harcama Bilgi Formu</h5>

            <form style="padding-top:10px" method="post" asp-action="HarcamaSayfasi" asp-area="Islemler" asp-controller="Harcama" enctype="multipart/form-data"> <!--Action a dosya göndereceğimi enctype ile belirttim-->
                
            

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Harcama Miktarı</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" asp-for="ExpensesAmount">
                    </div>
                </div>



                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Para Birimi</label>
                    <div class="col-sm-10">
                        <select class="form-select" aria-label="Default select example" asp-for="CurrencyUnit">
                            <option selected>Harcama yapılan para birimini seçiniz</option>
                            <option value="1">Türk Lirası</option>
                            <option value="2">Amerikan Doları</option>
                            <option value="3">Euro</option>
                            <option value="3">İngiliz Sterlini</option>
                        </select>

                    </div>
                </div>
                    <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Harcama Tipi</legend>
                     <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="ExpensesType" value="@AdvancePaymentType.Bireysel" checked>
                    <label class="form-check-label">
                                @HumanResourse.Entitiy.Enums.AdvancePaymentType.Bireysel.ToString()
                            </label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="ExpensesType" value="@AdvancePaymentType.Kurumsal">
                            <label class="form-check-label">
                                @HumanResourse.Entitiy.Enums.AdvancePaymentType.Kurumsal.ToString()
                            </label>
                        </div>
                    </div>
                </fieldset>
                <div class="row mb-3">
                  <label  class="col-sm-2 col-form-label">Dosya Yükle</label>
                  <div class="col-sm-10">
                    <input class="form-control" type="file" id="formFile" asp-for="Documentation">
                  </div>
                </div>

               @* <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Açıklama</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Description" class="form-control" style="height: 100px"></textarea>
                    </div>
                </div>*@
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Gönder</button>
                    <button type="reset" class="btn btn-secondary">Sıfırla</button>
                </div>

            </form>

        </div>
    </div>
</body>




