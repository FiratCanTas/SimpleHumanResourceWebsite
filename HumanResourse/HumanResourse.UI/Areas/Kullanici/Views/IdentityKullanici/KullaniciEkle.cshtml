	* License: https://bootstrapmade.com/license/
	======================================================== -->
</head>

<body>

	<!-- ======= Header ======= -->


	<div class="pagetitle">
		<h1 style="color: azure;">Kullanıcı Ekleme Sayfası</h1>
		<nav style="margin-top:10px">
			<ol class="breadcrumb">
				<li style="color: azure;" class="breadcrumb-item"><a href="/Kullanici/IdentityKullanici/KullanicilarListesi">Kullanıcılar</a></li>
				<li style="color: azure;" class="breadcrumb-item">Kullanıcı Ekleme</li>

			</ol>
		</nav>
	</div><!-- End Page Title -->

	<section class="section">
		<div class="row">
			<div class="col-lg-12">

				<div class="card">
					<div class="card-body">
						<h5 class="card-title"></h5>

						<form method="post" enctype="multipart/form-data">


							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Adı</label>
								<div class="col-sm-12">
									<input type="text" class="form-control" asp-for="Name">
									<span asp-validation-for="Name" class="text-danger"></span>
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">İkinci Adı</label>
								<div class="col-sm-12">
									<input type="text" class="form-control" asp-for="SecondName">
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Soyad</label>
								<div class="col-sm-12">
									<input type="text" class="form-control" asp-for="Surname">
									<span asp-validation-for="Surname" class="text-danger"></span>
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">TC Kimlik Numarası</label>
								<div class="col-sm-12">
									<input type="text" class="form-control" asp-for="IdentityNumber">
									<span asp-validation-for="IdentityNumber" class="text-danger"></span>
								</div>
							</div>



							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Cinsiyet</label>
								<div class="col-sm-12">
									@Html.DropDownListFor(x=>x.Gender,Html.GetEnumSelectList<Gender>(), new {@class="form-control"})
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Fotoğraf</label>
								<div class="col-sm-12">
									<input type="file" class="form-control" asp-for="ImageURL">
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Telefon</label>
								<div class="col-sm-12">
									<input type="text" class="form-control" asp-for="PhoneNumber">
									<span asp-validation-for="PhoneNumber" class="text-danger"></span>
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Şifre</label>
								<div class="col-sm-12">
									<input type="password" class="form-control" asp-for="Password">
									<span asp-validation-for="Password" class="text-danger"></span>
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Şifre Tekrarı</label>
								<div class="col-sm-12">
									<input type="password" class="form-control" asp-for="ConfirmPassword">
									<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
								</div>
							</div>

							

							 <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Departman</label>
                                <div class="col-sm-12">                             
                                    @Html.DropDownListFor(x=>x.Departman,Html.GetEnumSelectList<Departman>(), new {@class="form-control"})
                                </div>
                            </div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Meslek</label>
								<div class="col-sm-12">
									<input type="text" class="form-control" asp-for="Job">
									<span asp-validation-for="Job" class="text-danger"></span>
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Doğum Tarihi</label>
								<div class="col-sm-12">
									<input type="date" class="form-control" asp-for="BirthDate">
									<span asp-validation-for="BirthDate" class="text-danger"></span>
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Doğum Yeri</label>
								<div class="col-sm-12">
									<input type="text" class="form-control" asp-for="BirthPlace">
									<span asp-validation-for="BirthPlace" class="text-danger"></span>
								</div>
							</div>

							<div class="row mb-3">
								<label for="inputPassword" class="col-sm-3 col-form-label">Adres</label>
								<div class="col-sm-12">
									<textarea class="form-control" style="height: 100px; margin-bottom:20px" asp-for="Address"></textarea>
									<span asp-validation-for="Address" class="text-danger"></span>
								</div>

							</div>
							
							<div class="row mb-3">
								<div class="col-sm-12" style="display:flex; justify-content:flex-end">
									<button type="submit" class="btn btn-primary rounded-pill">Bilgilerimi Kaydet</button>
								</div>
							</div>

							<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						</form><!-- End General Form Elements -->

					</div>
				</div>

			</div>


		</div>
	</section>


	<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

	<!-- Vendor JS Files -->
	<script src="assets/vendor/apexcharts/apexcharts.min.js"></script>
	<script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="assets/vendor/chart.js/chart.min.js"></script>
	<script src="assets/vendor/echarts/echarts.min.js"></script>
	<script src="assets/vendor/quill/quill.min.js"></script>
	<script src="assets/vendor/simple-datatables/simple-datatables.js"></script>
	<script src="assets/vendor/tinymce/tinymce.min.js"></script>
	<script src="assets/vendor/php-email-form/validate.js"></script>

	<!-- Template Main JS File -->
	<script src="assets/js/main.js"></script>

</body>

</html>


