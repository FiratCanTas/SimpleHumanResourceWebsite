
@using HumanResourse.Entitiy.Enums

@{
    ViewData["Title"] = "KullanicilarListesi";
    Layout = "~/Areas/Yonetici/Views/Shared/_YoneticiLayout.cshtml";
    int sayac = 0;
}

<!DOCTYPE html>
<html lang="en">
<body>


    <div class="pagetitle">
        <h1 style="color: azure;">Kullanıcı Listesi</h1>
        <nav>
            <ol class="breadcrumb">
                <li style="color: azure;" class="breadcrumb-item"><a href="/Kullanici/IdentityKullanici/KullanicilarListesi/">Kullanıcılar</a></li>

            </ol>
        </nav>
    </div><!-- End Page Title -->


    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Kullanıcılar</h5>

                    <!-- Table with stripped rows -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col"> Adı</th>
                                <th scope="col"> Soyadı</th>
                                <th scope="col"> Cinsiyet</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>

                        @foreach (var item in ViewBag.user)
                        {
                            sayac++;
                            <tbody>
                                <tr>
                                    <th scope="row">@sayac</th>
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                    <td>@item.Gender</td>
                                    <td><a href="/Kullanici/IdentityKullanici/KullaniciSil/@item.Id" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Kullanici/IdentityKullanici/KullaniciGuncelle/@item.Id" class="btn btn-success">Güncelle</a></td>

                                </tr>
                            </tbody>
                        }


                    </table>
                    <!-- End Table with stripped rows -->
                    <a href="/Kullanici/IdentityKullanici/KullaniciEkle/" class="btn btn-info">Kullanıcı Ekle</a>
                </div>
            </div>

        </div>
    </div>






</body>

</html>

