<body>

	<!-- ======= Header ======= -->


	<div class="pagetitle">
		<h1 style="color: azure;">Kullanıcı Güncelleme Sayfası</h1>
		<nav style="margin-top:10px">
			<ol class="breadcrumb">
				<li style="color: azure;" class="breadcrumb-item"><a href="/Yonetici/Yonetim/Index" >Ana Sayfa</a></li>
				<li style="color: azure;" class="breadcrumb-item" >Kullanıcı Güncelleme Sayfası</li>

			</ol>
		</nav>
	</div><!-- End Page Title -->

	<section class="section">
		<div class="row">
			<div class="col-lg-12">

				<div class="card">
					<div class="card-body">
						<h5 class="card-title"></h5>

						<form method="post" enctype="multipart/form-data" >


							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Telefon</label>
								<div class="col-sm-12">
									<input type="number" class="form-control" asp-for="PhoneNumber">
									<span asp-validation-for="PhoneNumber" class="text-danger"></span>
								</div>
							</div>

						

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Fotoğraf</label>
								<div class="col-sm-12">
									<input type="file" class="form-control" asp-for="ImageURL">
								</div>
							</div>


						

							<div class="row mb-3">
								<label for="inputPassword" class="col-sm-3 col-form-label">Adres</label>
								<div class="col-sm-12">
									<textarea class="form-control" style="height: 100px; margin-bottom:20px" asp-for="Address"></textarea>
								</div>

							</div>
							
							<div class="row mb-3">
								<div class="col-sm-12" style="display:flex; justify-content:flex-end">
									<button type="submit" class="btn btn-primary rounded-pill">Bilgilerimi Kaydet</button>
								</div>
							</div>

						</form><!-- End General Form Elements -->

					</div>
				</div>

			</div>


		</div>
	</section>


	<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

	<!-- Vendor JS Files -->
	<script src="assets/vendor/apexcharts/apexcharts.min.js"></script>
